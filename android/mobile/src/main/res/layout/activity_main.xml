<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dgmltn.helen.MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:layout_margin="8dp"
        android:background="@drawable/remote_outline"
        android:gravity="center"
        android:orientation="vertical">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_left_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:tint="@color/fabTint"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_chevron_up" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_left_my"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:tint="@color/fabTint"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"
            android:text="my"
            app:rippleColor="#ffffff"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_left_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:tint="@color/fabTint"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_chevron_down" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:layout_margin="8dp"
        android:background="@drawable/remote_outline"
        android:gravity="center"
        android:orientation="vertical">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_right_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:tint="@color/fabTint"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_chevron_up" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_right_my"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:tint="@color/fabTint"
            android:layout_gravity="center_horizontal"
            android:text="my" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_right_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:tint="@color/fabTint"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_chevron_down" />

    </LinearLayout>
</LinearLayout>
